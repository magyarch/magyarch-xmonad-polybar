# AMD cpu temperature module/h≈ëmm√©rs√©klet jelz≈ë modul amd processzorokhoz
########################################################################
[module/atemp]
type = custom/script
exec = sensors | awk  '/^Tdie:/ {print $2}'
interval = 2
format-padding = 2
format-foreground = ${colors.foreground}
format-background = ${colors.background}
;format-underline = #C1B93E
format-prefix-foreground = #c3cdc8
label =  Ôãã %output%


# INTEL cpu temperature module/h≈ëmm√©rs√©klet jelz≈ë modul intel processzorokhoz
############################################################################
[module/itemp]
type = custom/script
exec = sensors | awk  '/Core 0/ {print $3}'
interval = 2
format-padding = 1
format-foreground = ${colors.foreground}
format-background = ${colors.background}
;format-underline = #C1B93E
format-prefix-foreground = #c3cdc8
label =  Ôãã %output%


# Battery module /Laptop akkuml√°tor folyamatjelz≈ë
#################################
[module/battery]
type = custom/script
exec = acpi -b | awk '{print $3 $4}'
format-padding = 2
format-foreground = ${colors.foreground}
format-background = ${colors.background}
label = %output%


# Uptime/Bekapcsol√°s √≥ta eltelt id≈ë
################################################################################

[module/uptime]
;https://github.com/jaagr/polybar/wiki/User-contributed-modules#uptime
type = custom/script
exec = uptime | awk -F, '{sub(".*up ",x,$1);print $1}'
interval = 100
label = Uptime : %output%

format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-prefix = "ÔÑà "
format-prefix-foreground = #C15D3E
#format-underline = #C15D3E
format-padding = 2


