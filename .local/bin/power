#!/bin/sh

DIALOG_RESULT=$(echo -e 'Quit xmonad\nHibernate\nReboot\nPoweroff' | dmenu -i -c -g 1 -l 6 -nb '#000000' -sb '#947cc3' -fn 'JetBrains Mono Medium-12' -p "SYSTEM" )

case $DIALOG_RESULT in
        "Quit xmonad" ) pkill xmonad ;;
        "Hibernate") systemctl hibernate ;;
        "Reboot") systemctl reboot ;;
        "Poweroff") systemctl poweroff ;;
        *) exit 0
esac
